{
  "name": "digi",
  "displayName": "Digi",
  "description": "Your very own virtual pet Digi!",
  "icon": "media/digi.png",
  "version": "0.0.2",
  "publisher": "JustinKnight",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinknight93/digi.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodetest.webview",
        "title": "Webview"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "digi.main",
          "name": "Digi"
        }
      ]
    },
    "configuration": {
      "title": "Digi Pet",
      "properties": {
        "digi.textColor": {
          "type": "string",
          "default": "#000000",
          "description": "Color of the name and level text."
        },
        "digi.joyColor": {
          "type": "string",
          "default": "#308530",
          "description": "Color of the joy bar when joy is high."
        },
        "digi.lowJoyColor": {
          "type": "string",
          "default": "#baba41",
          "description": "Color of the joy bar when joy is medium."
        },
        "digi.criticalJoyColor": {
          "type": "string",
          "default": "#c73e3e",
          "description": "Color of the joy bar when joy is low."
        },
        "digi.backgroundColor": {
          "type": "string",
          "default": "#a7bbe1",
          "description": "Background color of the canvas."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
